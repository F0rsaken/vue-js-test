{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs", // "module": "commonjs",
        // "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "lib": [
            "es5", "es2015.collection", "es2015.promise", "dom", "es2016.array.include"
        ],
    },
    "include": [
        "./src/**/*"
    ]
}